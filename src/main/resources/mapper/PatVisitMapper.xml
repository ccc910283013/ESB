<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://www.mybatis.apache.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ewell.esb.dao.PatVisitDao">
    <update id="updatePatSign">
        UPDATE PAT_VISIT PV
        <set>
            <if test="bodyWeight != null and bodyWeight != ''">
                PV.BODY_WEIGHT = #{ bodyWeight},
            </if>
            <if test="bodyHeight != null and bodyHeight != ''">
                PV.BODY_HEIGHT = #{ bodyHeight},
            </if>
        </set>
        WHERE PV.PATIENT_ID = #{ patId} AND PV.VISIT_ID = #{ visitId}
    </update>
</mapper>